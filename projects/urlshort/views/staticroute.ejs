<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home shordUrls</title>
    <style>
        body{
            font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        table{
            padding: 10px;
            justify-content: center;
            margin: 10px;
        }
    </style>
</head>
<body>
    <h1>URL Shortener</h1>
    <div>
          <% if (locals.id) { %>
         <p> URL Generated: http://localhost:8080/<%= id %></p>
        <% } %>
     
    
    <form method="POST" action="/api/url/">
        <label>Enter Your Original url</label>
        <input type="text" name="url" placeholder="https://example.com">
        <button type="submit" >short Url</button>

    </form>

    </div>
    
    <div>
        <% if (locals.urls) { %>
              <table>
            <thead>
                <th>S.No</th>
                <th>shortURL</th>
                <th>OriginlURL</th>
                <th>Count</th>
            </thead>
            <tbody>
              
                <% urls.forEach((element, index )=> { %>
                  <tr>
                 <td><%= index + 1 %></td>
                <td><%= element.shortId %></td>
                <td><%= element.redirectURL%></td>
                <td><%= element.vishitHistory.length %> </td>
                <% }) %>
                </tr>
                
            </tbody>
          

        </table>
         
        <% } %>
      
    </div>
   
    
</body>
</html>